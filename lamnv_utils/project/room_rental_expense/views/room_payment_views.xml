<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Room Payment List View -->
        <record id="view_room_payment_tree" model="ir.ui.view">
            <field name="name">room.payment.list</field>
            <field name="model">room.payment</field>
            <field name="arch" type="xml">
                <list string="Danh Sách Thanh Toán">
                    <field name="payment_date"/>
                    <field name="invoice_id"/>
                    <field name="room_id"/>
                    <field name="payment_amount" sum="Tổng Thanh Toán"/>
                    <field name="payment_method"/>
                    <field name="transaction_id"/>
                </list>
            </field>
        </record>

        <!-- Room Payment Form View -->
        <record id="view_room_payment_form" model="ir.ui.view">
            <field name="name">room.payment.form</field>
            <field name="model">room.payment</field>
            <field name="arch" type="xml">
                <form string="Thanh Toán">
                    <sheet>
                        <h1>
                            <field name="invoice_id" class="oe_inline" required="1"/>
                        </h1>

                        <group>
                            <group>
                                <field name="room_id" readonly="1"/>
                                <field name="payment_date" required="1"/>
                                <field name="payment_amount" required="1"/>
                            </group>
                            <group>
                                <field name="payment_method"/>
                                <field name="transaction_id"/>
                            </group>
                        </group>

                        <group>
                            <field name="payment_proof_image" widget="image" class="oe_avatar"/>
                        </group>

                        <field name="notes" placeholder="Ghi chú..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action: Room Payment -->
        <record id="action_room_payment" model="ir.actions.act_window">
            <field name="name">Thanh Toán</field>
            <field name="res_model">room.payment</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ghi nhận thanh toán mới
                </p>
            </field>
        </record>

    </data>
</odoo>
