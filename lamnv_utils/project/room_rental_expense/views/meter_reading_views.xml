<odoo>
    <data>

        <!-- Meter Reading List View -->
        <record id="view_meter_reading_tree" model="ir.ui.view">
            <field name="name">meter.reading.list</field>
            <field name="model">meter.reading</field>
            <field name="arch" type="xml">
                <list string="Danh Sách Chỉ Số Công Tơ">
                    <field name="reading_month"/>
                    <field name="room_id"/>
                    <field name="electric_current" widget="number_format"/>
                    <field name="electric_usage" widget="number_format"/>
                    <field name="water_current" widget="number_format"/>
                    <field name="water_usage" widget="number_format"/>
                    <field name="reading_date"/>
                </list>
            </field>
        </record>

        <!-- Meter Reading Search View -->
        <record id="view_meter_reading_search" model="ir.ui.view">
            <field name="name">meter.reading.search</field>
            <field name="model">meter.reading</field>
            <field name="arch" type="xml">
                <search string="Tìm Kiếm Chỉ Số">
                    <field name="room_id"/>
                    <field name="reading_month"/>
                    <filter string="Thay Công Tơ" name="filter_replaced" domain="['|', ('electric_meter_replaced', '=', True), ('water_meter_replaced', '=', True)]"/>
                    <filter string="Nhóm theo Phòng" name="group_room" context="{'group_by': 'room_id'}"/>
                    <filter string="Nhóm theo Tháng" name="group_month" context="{'group_by': 'reading_month'}"/>
                </search>
            </field>
        </record>

        <!-- Meter Reading Form View -->
        <record id="view_meter_reading_form" model="ir.ui.view">
            <field name="name">meter.reading.form</field>
            <field name="model">meter.reading</field>
            <field name="arch" type="xml">
                <form string="Chỉ Số Công Tơ">
                    <sheet>
                        <h1>
                            <field name="room_id" class="oe_inline" readonly="invoice_id"/>
                        </h1>
                        <h3>
                            <field name="reading_month" class="oe_inline" readonly="1"/>
                        </h3>

                        <notebook>
                            <!-- Tab: Điện -->
                            <page string="Điện" name="electric">
                                <group>
                                    <group>
                                        <field name="reading_date" readonly="invoice_id"/>
                                        <field name="electric_previous" widget="number_format" readonly="electric_meter_replaced or invoice_id"/>
                                        <field name="electric_current" widget="number_format" readonly="invoice_id"/>
                                        <field name="electric_usage" widget="number_format" readonly="not electric_usage_manual_override or invoice_id"/>
                                    </group>
                                    <group>
                                        <field name="electric_meter_replaced" readonly="invoice_id"/>
                                        <field name="electric_replacement_last" widget="number_format"
                                               placeholder="Chỉ số cuối công tơ cũ"
                                               invisible="not electric_meter_replaced"/>
                                        <field name="electric_usage_manual_override" readonly="invoice_id"/>
                                        <field name="invoice_id" options="{'no_open': False}" readonly="invoice_id"/>
                                        <field name="electric_image" widget="image" class="oe_avatar"/>
                                    </group>
                                </group>
                                <field name="electric_replacement_note" placeholder="Ghi chú thay công tơ..."/>
                            </page>

                            <!-- Tab: Nước -->
                            <page string="Nước" name="water">
                                <group>
                                    <group>
                                        <field name="reading_date" readonly="invoice_id"/>
                                        <field name="water_previous" widget="number_format" readonly="water_meter_replaced or invoice_id"/>
                                        <field name="water_current" widget="number_format" readonly="invoice_id"/>
                                        <field name="water_usage" widget="number_format" readonly="not water_usage_manual_override or invoice_id"/>
                                    </group>
                                    <group>
                                        <field name="water_meter_replaced" readonly="invoice_id"/>
                                        <field name="water_replacement_last" widget="number_format"
                                               placeholder="Chỉ số cuối công tơ cũ"
                                               invisible="not water_meter_replaced"/>
                                        <field name="water_usage_manual_override" readonly="invoice_id"/>
                                        <field name="water_image" widget="image" class="oe_avatar"/>
                                    </group>
                                </group>
                                <field name="water_replacement_note" placeholder="Ghi chú thay công tơ..."/>
                            </page>

                            <!-- Tab: Ghi Chú -->
                            <page string="Ghi Chú" name="notes">
                                <field name="notes" placeholder="Ghi chú thêm..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action: Meter Reading -->
        <record id="action_meter_reading" model="ir.actions.act_window">
            <field name="name">Chỉ Số Công Tơ</field>
            <field name="res_model">meter.reading</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ghi chỉ số điện/nước mới
                </p>
            </field>
        </record>

    </data>
</odoo>
