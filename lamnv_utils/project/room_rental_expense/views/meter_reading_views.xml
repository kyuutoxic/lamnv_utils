<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Meter Reading List View -->
        <record id="view_meter_reading_tree" model="ir.ui.view">
            <field name="name">meter.reading.list</field>
            <field name="model">meter.reading</field>
            <field name="arch" type="xml">
                <list string="Danh Sách Chỉ Số Công Tơ">
                    <field name="reading_month"/>
                    <field name="room_id"/>
                    <field name="electric_current"/>
                    <field name="electric_usage"/>
                    <field name="water_current"/>
                    <field name="water_usage"/>
                    <field name="reading_date"/>
                </list>
            </field>
        </record>

        <!-- Meter Reading Form View -->
        <record id="view_meter_reading_form" model="ir.ui.view">
            <field name="name">meter.reading.form</field>
            <field name="model">meter.reading</field>
            <field name="arch" type="xml">
                <form string="Chỉ Số Công Tơ">
                    <sheet>
                        <h1>
                            <field name="room_id" class="oe_inline"/>
                        </h1>
                        <h3>
                            <field name="reading_month" class="oe_inline" readonly="1"/>
                        </h3>

                        <notebook>
                            <!-- Tab: Điện -->
                            <page string="Điện" name="electric">
                                <group>
                                    <group>
                                        <field name="reading_date"/>
                                        <field name="electric_previous"/>
                                        <field name="electric_current"/>
                                        <field name="electric_usage" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="electric_meter_replaced"/>
                                        <field name="electric_image" widget="image" class="oe_avatar"/>
                                    </group>
                                </group>
                                <field name="electric_replacement_note" placeholder="Ghi chú thay công tơ..."/>
                            </page>

                            <!-- Tab: Nước -->
                            <page string="Nước" name="water">
                                <group>
                                    <group>
                                        <field name="reading_date"/>
                                        <field name="water_previous"/>
                                        <field name="water_current"/>
                                        <field name="water_usage" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="water_meter_replaced"/>
                                        <field name="water_image" widget="image" class="oe_avatar"/>
                                    </group>
                                </group>
                                <field name="water_replacement_note" placeholder="Ghi chú thay công tơ..."/>
                            </page>

                            <!-- Tab: Ghi Chú -->
                            <page string="Ghi Chú" name="notes">
                                <field name="notes" placeholder="Ghi chú thêm..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action: Meter Reading -->
        <record id="action_meter_reading" model="ir.actions.act_window">
            <field name="name">Chỉ Số Công Tơ</field>
            <field name="res_model">meter.reading</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ghi chỉ số điện/nước mới
                </p>
            </field>
        </record>

    </data>
</odoo>
