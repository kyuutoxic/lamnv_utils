<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Room Deposit List View -->
        <record id="view_room_deposit_tree" model="ir.ui.view">
            <field name="name">room.deposit.list</field>
            <field name="model">room.deposit</field>
            <field name="arch" type="xml">
                <list string="Danh Sách Tiền Cọc" decoration-warning="status == 'disputed'">
                    <field name="room_id"/>
                    <field name="deposit_date"/>
                    <field name="deposit_amount" widget="vnd_currency"/>
                    <field name="status"/>
                    <field name="return_date"/>
                    <field name="return_amount" widget="vnd_currency"/>
                </list>
            </field>
        </record>

        <!-- Room Deposit Form View -->
        <record id="view_room_deposit_form" model="ir.ui.view">
            <field name="name">room.deposit.form</field>
            <field name="model">room.deposit</field>
            <field name="arch" type="xml">
                <form string="Tiền Cọc">
                    <sheet>
                        <h1>
                            <field name="room_id" class="oe_inline" required="1"/>
                        </h1>

                        <group>
                            <group>
                                <field name="deposit_date" required="1"/>
                                <field name="deposit_amount" widget="vnd_currency" required="1"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="receipt_image" widget="image" class="oe_avatar"/>
                            </group>
                        </group>

                        <group>
                            <group>
                                <field name="expected_return_date"/>
                                <field name="return_date"/>
                                <field name="return_amount" widget="vnd_currency"/>
                            </group>
                        </group>

                        <field name="notes" placeholder="Ghi chú..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action: Room Deposit -->
        <record id="action_room_deposit" model="ir.actions.act_window">
            <field name="name">Tiền Cọc</field>
            <field name="res_model">room.deposit</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ghi nhận tiền cọc
                </p>
            </field>
        </record>

    </data>
</odoo>
