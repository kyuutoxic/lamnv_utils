<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Room Invoice List View -->
        <record id="view_room_invoice_tree" model="ir.ui.view">
            <field name="name">room.invoice.list</field>
            <field name="model">room.invoice</field>
            <field name="arch" type="xml">
                <list string="Danh Sách Hóa Đơn" decoration-danger="status == 'overdue'" decoration-success="status == 'paid'">
                    <field name="invoice_number"/>
                    <field name="room_id"/>
                    <field name="invoice_month"/>
                    <field name="total_amount" sum="Tổng"/>
                    <field name="paid_amount" sum="Đã Thanh Toán"/>
                    <field name="remaining_amount" sum="Còn Lại"/>
                    <field name="status"/>
                    <field name="due_date"/>
                </list>
            </field>
        </record>

        <!-- Room Invoice Search View -->
        <record id="view_room_invoice_search" model="ir.ui.view">
            <field name="name">room.invoice.search</field>
            <field name="model">room.invoice</field>
            <field name="arch" type="xml">
                <search string="Tìm Kiếm Hóa Đơn">
                    <field name="room_id"/>
                    <field name="invoice_month"/>
                    <field name="status"/>
                    <filter string="Đến Hạn" name="filter_due" domain="[('due_date', '&lt;=', context_today()), ('status', '!=', 'paid')]"/>
                    <filter string="Quá Hạn" name="filter_overdue" domain="[('status', '=', 'overdue')]"/>
                    <filter string="Nháp" name="status_draft" domain="[('status', '=', 'draft')]"/>
                    <filter string="Chờ" name="status_pending" domain="[('status', '=', 'pending')]"/>
                    <filter string="Thanh Toán Một Phần" name="status_partial" domain="[('status', '=', 'partially_paid')]"/>
                    <filter string="Đã Thanh Toán" name="status_paid" domain="[('status', '=', 'paid')]"/>
                    <separator/>
                    <filter string="Nhóm theo Phòng" name="group_room" context="{'group_by': 'room_id'}"/>
                    <filter string="Nhóm theo Tháng" name="group_month" context="{'group_by': 'invoice_month'}"/>
                    <filter string="Nhóm theo Trạng Thái" name="group_status" context="{'group_by': 'status'}"/>
                </search>
            </field>
        </record>

        <!-- Room Invoice Form View -->
        <record id="view_room_invoice_form" model="ir.ui.view">
            <field name="name">room.invoice.form</field>
            <field name="model">room.invoice</field>
            <field name="arch" type="xml">
                <form string="Hóa Đơn">
                    <header>
                        <button name="action_confirm" type="object" string="Xác Nhận" class="oe_highlight"
                                invisible="status != 'draft'"/>
                        <button name="action_paid" type="object" string="Đã Thanh Toán" class="oe_highlight"
                                invisible="status not in ['pending', 'partially_paid', 'overdue']"/>
                        <button name="action_cancel" type="object" string="Hủy"
                                invisible="status in ['paid', 'canceled']"/>
                        <button name="action_print_invoice" type="object" string="In PDF"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,pending,paid,overdue"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="invoice_number" placeholder="Số Hóa Đơn"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="room_id" required="1" readonly="status in ['paid', 'canceled']"/>
                                <field name="invoice_month" required="1" readonly="status in ['paid', 'canceled']"/>
                                <field name="invoice_date" readonly="status in ['paid', 'canceled']"/>
                            </group>
                            <group>
                                <field name="due_date" readonly="status in ['paid', 'canceled']"/>
                                <field name="meter_reading_id" readonly="status in ['paid', 'canceled']"/>
                                <field name="applied_config_id" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <!-- Tab: Chi Tiết Hóa Đơn -->
                            <page string="Chi Tiết Hóa Đơn" name="invoice_details">
                                <group>
                                    <group string="Tiền Thuê">
                                        <field name="rent_amount" required="1" readonly="status in ['paid', 'canceled']"/>
                                    </group>
                                    <group string="Tiền Điện">
                                        <field name="electric_price_per_unit" readonly="status in ['paid', 'canceled']"/>
                                        <field name="electric_usage" readonly="status in ['paid', 'canceled']"/>
                                        <field name="electric_amount" readonly="1"/>
                                    </group>
                                </group>

                                <group>
                                    <group string="Tiền Nước">
                                        <field name="water_price_per_unit" readonly="status in ['paid', 'canceled']"/>
                                        <field name="water_usage" readonly="status in ['paid', 'canceled']"/>
                                        <field name="water_amount" readonly="1"/>
                                    </group>
                                    <group string="Tiền Tiện Ích">
                                        <field name="utilities_amount" readonly="status in ['paid', 'canceled']"/>
                                        <field name="other_charges" readonly="status in ['paid', 'canceled']"/>
                                    </group>
                                </group>

                                <separator string="Tóm Tắt"/>
                                <group>
                                    <group>
                                        <field name="subtotal" readonly="1" string="Tổng Cộng"/>
                                        <field name="discount_amount" readonly="status in ['paid', 'canceled']"/>
                                        <field name="total_amount" readonly="1" string="Tổng Thanh Toán"/>
                                    </group>
                                    <group>
                                        <field name="paid_amount" string="Đã Thanh Toán"/>
                                        <field name="remaining_amount" readonly="1" string="Còn Lại"/>
                                        <field name="manual_breakdown" placeholder="VD: Nước: 4 x 20k = 80k..." readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Tab: Ghi Chú -->
                            <page string="Ghi Chú" name="notes">
                                <field name="notes" placeholder="Ghi chú..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action: Room Invoice -->
        <record id="action_room_invoice" model="ir.actions.act_window">
            <field name="name">Hóa Đơn</field>
            <field name="res_model">room.invoice</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('status', '!=', 'canceled')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo hóa đơn mới
                </p>
            </field>
        </record>

    </data>
</odoo>
